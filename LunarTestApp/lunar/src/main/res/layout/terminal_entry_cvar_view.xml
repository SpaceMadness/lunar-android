<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/terminal_cvar_view_text_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:text="name"
        android:typeface="monospace"/>

    <EditText
        style="@android:style/TextAppearance.Small"
        android:id="@+id/terminal_cvar_view_edit_text_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:typeface="monospace"/>

    <ImageButton
        style="@style/GlyphButtonStyle"
        android:id="@+id/terminal_cvar_view_button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_settings_backup_restore_black_24dp"/>

</LinearLayout>